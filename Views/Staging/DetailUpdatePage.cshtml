function deleteProduct() { 
    //start of ajax
        $.ajax({
        type:"POST",
        url: '@Url.Action("SetDeleteSessionStaging","Staging")',
        contentType: 'application/json',
        data: JSON.stringify(dataObject),
        success:function(data){
            if(data.status == 'true'){
                var urlToRedirect = '@Url.Action("DetailDeleteStaging","Staging")';
                window.location.href = urlToRedirect;
            }
            else{
                alert(data.msg);
            }
        },
        error:function(){
            alert("Fail");
        }
        });
        //end of ajax
}

